{
  "manifest_version": 3,
  "name": "JIRA API Field Highlighter v1.3",
  "version": "1.3",
  "description": "Highlights populated fields in the JIRA API. IDs in yellow, useful data in green, custom fields in blue.",
  "permissions": ["activeTab", "storage"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.atlassian.net/rest/api/*",
        "*://*/rest/api/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
